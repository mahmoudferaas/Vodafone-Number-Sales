<br />
<div id="outer">
    <div class="inner"><button type="button" class="btn btn-primary" onclick="window.location.href = '/Sales/Create'" id="SaleBtn">Create Sale</button></div>
    @if (ViewBag.UserRole != "Agent")
    {
        <div class="inner"><button type="button" class="btn btn-primary" onclick="window.location.href = '/Numbers/ImportNumbers'" id="SaleBtn">Import Numbers</button></div>
        <div class="inner"><button type="button" class="btn btn-primary" onclick="window.location.href = '/Numbers/PrivateNumbers'" >Private Numbers</button></div>
        <div class="inner"><button type="button" class="btn btn-danger" onclick="window.location.href = '/Numbers/RemoveAll'">Remove All Numbers</button></div>
        <div class="inner"><button type="button" class="btn btn-success" onclick="window.location.href = '/Numbers/ExportNumbers'">Export Numbers</button></div>
    }
   
</div>
