@model List<Vodafon.Models.NumbersViewModel>

@{
    ViewBag.Title = "PrivateNumbers";
}

@using (Html.BeginForm("ExportToExcel", "Numbers", FormMethod.Post))
{
    <table class="table">
        <tr>
            <th>Number</th>
            <th>Is Choosen</th>
            <th>Is Private</th>
        </tr>
        @{
            for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(modelItem => Model[i].ID)
                        @Html.HiddenFor(modelItem => Model[i].No)
                        @Html.DisplayFor(modelItem => Model[i].No)
                    </td>
                    <td>
                        @Html.CheckBoxFor(modelItem => Model[i].IsChoosen, new { htmlAttributes = new { @class = "form-control" } })
                        @*@Html.DisplayFor(modelItem => item.IsChoosen)*@
                    </td>
                    <td>
                        @Html.CheckBoxFor(modelItem => Model[i].IsPrivate, new { htmlAttributes = new { @class = "form-control" } })
                        @*@Html.DisplayFor(modelItem => item.IsPrivate)*@
                    </td>
                </tr>
            }
        }
    </table>


    <div class="form-group row">
        <div class="col-md-offset-2 col-md-1">
            <input type="submit" value="Export Excel" class="btn btn-primary" />
        </div>
    </div>
            }


